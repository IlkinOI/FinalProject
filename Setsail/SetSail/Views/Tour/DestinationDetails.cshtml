@model SetSail.ViewModels.VmLayoutDesLog
@{
    ViewBag.Title = "DestinationDetails";
}

<section id="introDesDetail" style="background-image: url(/Uploads/@Model.Ddestionation.BgImage);">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="slogan">
                    <div class="upperTitle">
                        <h3>
                            Destinations
                        </h3>
                    </div>
                    <div class="title">
                        <h1>
                            @Model.Ddestionation.Name
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="desDetail">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12 order-2">
                <div class="latestPosts">
                    <h5>@Model.Ddestionation.Name Tours</h5>
                    @foreach (var item in Model.DesTours)
                    {
                        <div class="post">
                            <div class="img">
                                <a href="@Url.Action("TourDetailIndex","Tour",new { id=item.Id})"><img src="~/Uploads/@item.FrontImage" alt=""></a>
                            </div>
                            <a href="@Url.Action("TourDetailIndex","Tour",new { id=item.Id})">
                                <h6>@item.Name</h6>
                            </a>

                            <p>@item.CreatedDate.ToString("MMMM dd, yyyy")</p>
                        </div>
                    }

                </div>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-12 order-1">
                <div class="wrap">
                    <h2 class="title">
                        @Model.Ddestionation.Name
                    </h2>
                    <p class="text">
                        @Model.Ddestionation.Text1
                    </p>
                    <div class="pics">
                        <div class="pic">
                            <img src="~/Uploads/@Model.Ddestionation.Pic1" alt="">
                        </div>
                        <div class="pic">
                            <img src="~/Uploads/@Model.Ddestionation.Pic2" alt="">
                        </div>
                    </div>
                    <p class="text">
                        @Model.Ddestionation.Text2
                    </p>
                    <div class="info">
                        <h2 class="infotitle">
                            Good to Know
                        </h2>
                        <p class="infotext">
                            Read the basic info and also some fun facts about Australia! Here you will find
                            everything you should know about the ‘’Land of Plenty’’!
                        </p>
                        <div class="item">
                            <span class="icon"><i class="fas fa-map-marker-alt"></i></span>
                            <div class="detail">Country</div>
                            <div class="name">@Model.Ddestionation.Name</div>
                        </div>
                        <div class="item">
                            <span class="icon"><i class="fab fa-cc-visa"></i></span>
                            <div class="detail">Visa Requirements</div>
                            <div class="name">@Model.Ddestionation.Visa</div>
                        </div>
                        <div class="item">
                            <span class="icon"><i class="far fa-comment"></i></span>
                            <div class="detail">Languages spoken</div>
                            <div class="name">@Model.Ddestionation.Language</div>
                        </div>
                        <div class="item">
                            <span class="icon"><i class="far fa-compass"></i></span>
                            <div class="detail">Area (km2)</div>
                            <div class="name">@Model.Ddestionation.Area</div>
                        </div>
                    </div>
                    <h2 class="title">
                        Municipalities
                    </h2>
                    <p class="text">
                        @Model.Ddestionation.MunText
                    </p>
                    <div class="pics">
                        <div class="pic">
                            <img src="~/Uploads/@Model.Ddestionation.Pic3" alt="">
                        </div>
                        <div class="pic">
                            <img src="~/Uploads/@Model.Ddestionation.Pic4" alt="">
                        </div>
                    </div>
                    <div class="pics">
                        <div class="pic">
                            <img src="~/Uploads/@Model.Ddestionation.Pic5" alt="">
                        </div>
                        <div class="pic">
                            <img src="~/Uploads/@Model.Ddestionation.Pic6" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

