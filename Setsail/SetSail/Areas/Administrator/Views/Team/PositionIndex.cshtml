@model IEnumerable<SetSail.Models.Position>

@{
    ViewBag.Title = "PositionIndex";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Positions</h2>

<p>
    @Html.ActionLink("Create New", "PositionCreate")
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "PositionUpdate", new { id=item.Id }) |
            <a href="@Url.Action("PositionDelete","Team", new { id = item.Id })" onclick="return confirm('Are you sure?')">Delete</a>
        </td>
    </tr>
}

</table>
