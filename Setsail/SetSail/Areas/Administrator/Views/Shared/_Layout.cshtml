

<!DOCTYPE html>
<html lang="en">
@using SetSail.Models
@{
    Admin admin = (Admin)Session["Admin"];
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SetSail Admin Panel</title>
    <!-- Custom fonts for this template-->
    <link href="~/Areas/Administrator/Front/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Areas/Administrator/Front/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/Front/assets/dtp/bootstrap-datepicker3.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Front/css/timepicker.css" />
    <link href="~/Areas/Administrator/Front/css/style.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index","Home")">
                <div class="sidebar-brand-icon rotate-n-15">
                    <img src="~/Front/img/logo3.png" alt="Alternate Text" width="100" />
                </div>
                <div class="sidebar-brand-text mx-3">Travel</div>
            </a>
            <!-- Divider -->
            <hr class="sidebar-divider my-0">
            <!-- Nav Item - Dashboard -->
            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                    <span>Pages</span>
                </a>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="@Url.Action("HomeIndex","Page")">Home Page</a>
                        <a class="collapse-item" href="@Url.Action("WinterIndex","Page")">Winter Page</a>
                        <a class="collapse-item" href="@Url.Action("SummerIndex","Page")">Summer Page</a>
                        <a class="collapse-item" href="@Url.Action("CityIndex","Page")">City Page</a>
                        <a class="collapse-item" href="@Url.Action("WineIndex","Page")">Wine Page</a>
                        <a class="collapse-item" href="@Url.Action("ExoticIndex","Page")">Exotic Page</a>
                        <a class="collapse-item" href="@Url.Action("Index","About")">About Page</a>
                        <a class="collapse-item" href="@Url.Action("FaqIndex","About")">FAQ</a>
                    </div>
                </div>
            </li>
            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapse3" aria-expanded="true" aria-controls="collapse3">
                    <span>Users</span>
                </a>
                <div id="collapse3" class="collapse" aria-labelledby="heading3" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="@Url.Action("Index","Admin")">Administrators</a>
                        <a class="collapse-item" href="@Url.Action("UserIndex","Home")">Users</a>
                        <a class="collapse-item" href="@Url.Action("UserSocialIndex","Home")">Users Socials</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapse4" aria-expanded="true" aria-controls="collapse4">
                    <span>Blogs</span>
                </a>
                <div id="collapse4" class="collapse" aria-labelledby="heading4" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="@Url.Action("BlogCategoryIndex","Blog")">Blog Categories</a>
                        <a class="collapse-item" href="@Url.Action("Index","Blog")">Blogs</a>
                        <a class="collapse-item" href="@Url.Action("BlogCommentIndex","Blog")">Blog Comments</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapse5" aria-expanded="true" aria-controls="collapse5">
                    <span>Contacts</span>
                </a>
                <div id="collapse5" class="collapse" aria-labelledby="heading5" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="@Url.Action("ContactCountryIndex","Contact")">Contact Countries</a>
                        <a class="collapse-item" href="@Url.Action("ContactCityIndex","Contact")">Contact Cities</a>
                        <a class="collapse-item" href="@Url.Action("Index","Contact")">Contacts</a>
                        <a class="collapse-item" href="@Url.Action("ContactSocialIndex","Contact")">Contact Socials</a>
                        <a class="collapse-item" href="@Url.Action("ContactReplyIndex","Contact")">Contact Replies</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapse6" aria-expanded="true" aria-controls="collapse6">
                    <span>Tours</span>
                </a>
                <div id="collapse6" class="collapse" aria-labelledby="heading6" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="@Url.Action("BookingIndex","Tour")">Bookings</a>
                        <a class="collapse-item" href="@Url.Action("Index","Tour")">Tours</a>
                        <a class="collapse-item" href="@Url.Action("TourDatesIndex","Tour")">Tours Dates</a>
                        <a class="collapse-item" href="@Url.Action("TourImagesIndex","Tour")">Tour Images</a>
                        <a class="collapse-item" href="@Url.Action("TourCategoryIndex","Tour")">Tour Categories</a>
                        <a class="collapse-item" href="@Url.Action("TourTypeIndex","Tour")">Tour Types</a>
                        <a class="collapse-item" href="@Url.Action("DestinationIndex","Tour")">Destinations</a>
                        <a class="collapse-item" href="@Url.Action("DesToCatIndex","Tour")">Destination & Categories</a>
                        <a class="collapse-item" href="@Url.Action("DesToTypeIndex","Tour")">Destination & Types</a>
                        <a class="collapse-item" href="@Url.Action("TourCityIndex","Tour")">Tour Cities</a>
                        <a class="collapse-item" href="@Url.Action("IncludeIndex","Tour")">Tour Includes</a>
                        <a class="collapse-item" href="@Url.Action("NotIncludeIndex","Tour")">Tour Not Includes</a>
                        <a class="collapse-item" href="@Url.Action("DayIndex","Tour")">Tour Days</a>
                        <a class="collapse-item" href="@Url.Action("DayIncludeIndex","Tour")">Tour Day Includes</a>
                        <a class="collapse-item" href="@Url.Action("TourReviewIndex","Tour")">Tour Reviews</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapse7" aria-expanded="true" aria-controls="collapse7">
                    <span>Team</span>
                </a>
                <div id="collapse7" class="collapse" aria-labelledby="heading7" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="@Url.Action("PositionIndex","Team")">Team Positions</a>
                        <a class="collapse-item" href="@Url.Action("Index","Team")">Team</a>
                        <a class="collapse-item" href="@Url.Action("TeamSocialIndex","Team")">Team Socials</a>
                    </div>
                </div>
            </li>
            <!-- Nav Item - Utilities Collapse Menu -->
            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">
        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Sidebar Toggle (Topbar) -->

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <div class="topbar-divider d-none d-sm-block"></div>
                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@(admin != null ? admin.Fullname : "")</span>
                                @if (admin != null)
                                {
                                    <img class="img-profile rounded-circle" src="~/Uploads/@admin.Photo">
                                }
                                else
                                {
                                    <img class="img-profile rounded-circle" src="~/Front/img/mypage/User.jpg">
                                }
                            </a>


                            <!-- Dropdown - User Information -->
                            @if (Session["Admin"] != null)
                            {
                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" href="@Url.Action("Details","Admin", new { id=admin.Id})">
                                        <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Profile
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Logout
                                    </a>
                                </div>
                            }
                        </li>
                    </ul>
                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; SetSail 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="@Url.Action("Logout","Home")">Logout</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->

    <script src="~/Areas/Administrator/Front/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/Administrator/Front/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Areas/Administrator/Front/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Areas/Administrator/Front/js/sb-admin-2.min.js"></script>
    <script src="~/Front/assets/dtp/bootstrap-datepicker.js"></script>
    <script src="~/Front/assets/tp/timepicker.js"></script>

    <script src="~/Areas/Administrator/Front/js/script.js"></script>
</body>
</html>
