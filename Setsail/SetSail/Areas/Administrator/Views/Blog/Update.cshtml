@model SetSail.Models.Blog

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<form enctype="multipart/form-data" method="post">
    <div class="form-horizontal">
        <h4>Update Blog</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                <label>Blog Category</label>
                <select class="form-control" name="BlogCategoryId">
                    <option value="value">Choose</option>
                    @foreach (var item in ViewBag.Categories)
                    {
                       <option value="@item.Id" @(Model.BlogCategoryId == item.Id ? "selected" : "")>@item.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BgImageFile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img src="~/Uploads/@Model.BgImage" alt="Alternate Text" height="100" />
                @Html.TextBoxFor(model => model.BgImageFile, new { @class = "form-control", @type = "file" })
                @Html.ValidationMessageFor(model => model.BgImageFile, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MainImageFile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img src="~/Uploads/@Model.MainImage" alt="Alternate Text" height="100" />
                @Html.TextBoxFor(model => model.MainImageFile, new { @class = "form-control", @type = "file" })
                @Html.ValidationMessageFor(model => model.MainImageFile, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TopText, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.TopText, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TopText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Text1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text1, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Text1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quote, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Quote, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Quote, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Text2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text2, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Text2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Image1File, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img src="~/Uploads/@Model.Image1" alt="Alternate Text" height="100" />
                @Html.TextBoxFor(model => model.Image1File, new { @class = "form-control", @type = "file" })
                @Html.ValidationMessageFor(model => model.Image1File, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Image2File, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img src="~/Uploads/@Model.Image2" alt="Alternate Text" height="100" />
                @Html.TextBoxFor(model => model.Image2File, new { @class = "form-control", @type = "file" })
                @Html.ValidationMessageFor(model => model.Image2File, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Text3, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text3, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Text3, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
