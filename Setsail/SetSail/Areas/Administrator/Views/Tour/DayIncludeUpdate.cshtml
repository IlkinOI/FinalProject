@model SetSail.Models.DayInclude

@{
    ViewBag.Title = "DayIncludeUpdate";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<form method="post">

    <div class="form-horizontal">
        <h4>Update Tour Day Include</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label>Day</label>
                <select class="form-control" name="DayId">
                    <option value="value">Choose</option>
                    @foreach (var day in ViewBag.Categories)
                    {
                <option value="@day.Id" @(Model.DayId == day.Id && Model.Day.TourId == day.TourId ? "selected" : "")>Tour: @day.Tour.Name - Day: @day.Title </option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Feature, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Feature, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Feature, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "DayIncludeIndex")
</div>
