@model IEnumerable<SetSail.Models.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Contacts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Map)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactCity.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactCity.ContactCountry.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Text)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phone1)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phone2)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @(item.Map.Length > 100 ? item.Map.Substring(0, 100) + "..." : item.Map)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ContactCity.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ContactCity.ContactCountry.Name)
    </td>
    <td>
        @Html.ActionLink("Edit", "Update", new { id = item.Id }) |
        <a href="@Url.Action("Delete","Contact", new { id = item.Id })" onclick="return confirm('Are you sure?')">Delete</a>
    </td>
</tr>
}

</table>
