@model SetSail.ViewModels.VmLayoutDesLog
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SetSail Admin Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/Areas/Administrator/Front/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Areas/Administrator/Front/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/Areas/Administrator/Front/css/style.css" rel="stylesheet" />

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">

                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                            </div>
                            <form class="user" method="post">
                                <div class="form-group">
                                    @Html.TextBoxFor(u => u.Email, null, new { @class = "form-control form-control-user", @placeholder = "Enter Email...", @type = "email" })
                                    @Html.ValidationMessageFor(u => u.Email, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(u => u.Password, null, new { @class = "form-control form-control-user", @placeholder = "Enter Password...", @type = "password" })
                                    @Html.ValidationMessageFor(u => u.Password, null, new { @class = "text-danger", })
                                </div>
                                <button class="btn btn-primary btn-user btn-block" type="submit">Login</button>
                                <a href="@Url.Action("Register","Home")" class="btn btn-primary btn-user btn-block">Register</a>
                            </form>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Areas/Administrator/Front/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/Administrator/Front/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Areas/Administrator/Front/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Areas/Administrator/Front/js/sb-admin-2.min.js"></script>

</body>

</html>

