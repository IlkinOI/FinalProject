@model IEnumerable<SetSail.Models.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Blogs</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BgImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MainImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TopText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quote)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogCategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Fullname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Uploads/@item.BgImage" alt="@item.BgImage" height="100" />
        </td>
        <td>
            <img src="~/Uploads/@item.MainImage" alt="@item.MainImage" height="100" />
        </td>
        <td>
            @(item.TopText.Length > 100 ? item.TopText.Substring(0, 100) + "..." : item.TopText)
        </td>
        <td>
            @(item.Text1.Length > 100 ? item.Text1.Substring(0, 100) + "..." : item.Text1)
        </td>
        <td>
            @(item.Quote.Length > 100 ? item.Quote.Substring(0, 100) + "..." : item.Quote)
        </td>
        <td>
            @(item.Text2.Length > 100 ? item.Text2.Substring(0, 100) + "..." : item.Text2)
        </td>
        <td>
            <img src="~/Uploads/@item.Image1" alt="@item.Image1" height="100" />
        </td>
        <td>
            <img src="~/Uploads/@item.Image2" alt="@item.Image2" height="100" />
        </td>
        <td>
            @(item.Text3.Length > 100 ? item.Text3.Substring(0, 100) + "..." : item.Text3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BlogCategory.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Fullname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Update", new { id=item.Id }) |
            <a href="@Url.Action("Delete","Blog", new { id = item.Id })" onclick="return confirm('Are you sure?')">Delete</a>
        </td>
    </tr>
}

</table>
