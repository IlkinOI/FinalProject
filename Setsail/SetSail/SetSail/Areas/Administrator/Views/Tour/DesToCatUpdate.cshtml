@model SetSail.Models.DesToCat

@{
    ViewBag.Title = "DesToCatUpdate";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="form-horizontal">
        <h4>Update Destination to Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label>Destination</label>
                <select class="form-control" name="DestinationId">
                    <option value="value">Choose</option>
                    @foreach (var item in ViewBag.Categories1)
                    {
                        <option value="@item.Id" @(Model.DestinationId == item.Id ? "selected" : "")>@item.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label>Tour Category</label>
                <select class="form-control" name="TourCategoryId">
                    <option value="value">Choose</option>
                    @foreach (var item in ViewBag.Categories2)
                    {
                        <option value="@item.Id" @(Model.TourCategoryId == item.Id ? "selected" : "")>@item.Name</option>
                    }
                </select>
            </div>
        </div>
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "DesToCatIndex")
</div>
