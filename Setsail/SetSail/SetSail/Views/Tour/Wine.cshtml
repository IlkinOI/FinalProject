<section id="popularToursWine">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="slogan">
                    <div class="textWrapper">
                        <div class="title">
                            <h1>
                                Best Wine Tours
                            </h1>
                        </div>
                        <div class="text">
                            <h5>
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
                                eiusmod
                                tempor incididunt ut labore et dolore magna aliqua.
                            </h5>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var cat in Model.TourCategories.Where(c => c.Name == "Winter"))
            {
                foreach (var tour in Model.Tours.Where(t => t.TourCity.Destination.DesToCats == cat.DesToCats).Take(6))
                {
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="tourCity">
                            <div class="BgImg">
                                <a href="@Url.Action("TourDetailIndex","Tour",new { id=tour.Id})"><img src="~/Uploads/@tour.FrontImage" alt=""></a>
                            </div>
                            <div class="info">
                                <a href="@Url.Action("TourDetailIndex","Tour",new { id=tour.Id})">
                                    <p>@tour.Name @tour.TourCity.Name</p>
                                </a>
                                <span class="price">$@tour.Price.ToString("0")</span>
                            </div>
                        </div>
                    </div>

                }
            }
        </div>
    </div>
</section>

