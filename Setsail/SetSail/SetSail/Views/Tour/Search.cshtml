@model SetSail.ViewModels.VmSearch
@{
    ViewBag.Title = "Search";
}

<section id="introSearch" style="background-image: url(/Front/img/search/searchBG1.jpg);">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="slogan">
                    <div class="upperTitle">
                        <h3>
                            Find Your
                        </h3>
                    </div>
                    <div class="title">
                        <h1>
                            Dream Tour
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="searchPage">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <ul class="nav nav-tabs">
                    <li class="nav-item byDate">
                        <a class="nav-link" href="@Url.Action("Search","Tour")"><i class="far fa-calendar"></i>DATE</a>
                    </li>
                    <li class="nav-item byHigh">
                        <a class="nav-link" href="@Url.Action("Search","Tour")"><i class="fas fa-arrow-circle-up"></i>PRICE LOW TO HIGN</a>
                    </li>
                    <li class="nav-item byLow">
                        <a class="nav-link" href="@Url.Action("Search","Tour")">
                            <i class="fas fa-arrow-circle-down"></i>PRICE
                            HIGH TO LOW
                        </a>
                    </li>
                    <li class="nav-item byName">
                        <a class="nav-link" href="@Url.Action("Search","Tour")"><i class="fas fa-pen"></i>NAME (A-Z)</a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <form class="srch" method="post" action="@Url.Action("Search","Tour")">
                    <input type="text" name="search" id="search" placeholder="Search...">
                    <button type="submit">Search</button>
                </form>
            </div>
            <div class="col-lg-9">
                <div class="toursContent">
                    @foreach (var tour in Model.Tours)
                    {
                        <div class="col-lg-6 col-md-12 col-sm-12">
                            <div class="item">
                                <div class="img">
                                    <a href="@Url.Action("TourDetailIndex","Tour",new { id=tour.Id})"><img src="~/Uploads/@tour.FrontImage" alt=""></a>
                                </div>
                                <div class="reviews">
                                    <div class="span">
                                        <span><i class="far fa-comment"></i></span>
                                        <span>@tour.TourReviews.Count.ToString()</span>
                                    </div>
                                    <div class="span">
                                        <span><i class="fas fa-user"></i></span>
                                        <span>@tour.TicketsNum booking left</span>
                                    </div>
                                    <div class="span">
                                        <span><i class="fas fa-map-marker-alt"></i></span>
                                        <a href="@Url.Action("DestinationDetails","Tour", new {id=tour.TourCity.DestinationId })"><span>E@tour.TourCity.Destination.Name</span></a>
                                    </div>
                                </div>
                                <div class="info">
                                    <a href="@Url.Action("TourDetailIndex","Tour",new { id=tour.Id})"> <span>@tour.Name </span> </a>
                                    <p>
                                        @(tour.About.Length>50?tour.About.Substring(0,50)+"...":tour.About)
                                    </p>
                                    <div class="details">
                                        <span class="price">$@tour.Price.ToString("0")</span>
                                        <span class="star"><i class="fas fa-star-half-alt"></i></span>
                                        <span class="rating">5.0</span>
                                        <span class="expression">Good</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                </div>
                <div class="pages">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Search","Tour", new { page=(Model.CurrentPage==1?1:Model.CurrentPage-1)})" aria-label="Previous">
                                        <span aria-hidden="true"><i class="fas fa-angle-left"></i></span>
                                    </a>
                                </li>
                            }
                            @for (int i = 1; i <= Model.PageCount; i++)
                            {
                                if (i == Model.CurrentPage)
                                {
                                    <li class="page-item onpage"><a class="page-link" href="@Url.Action("Search","Tour", new { page=i})">@i</a></li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" href="@Url.Action("Search","Tour", new { page=i})">@i</a></li>
                                }
                            }
                            @if (Model.CurrentPage < Model.PageCount)
                            {
                                <li class="page-item">
                                    <a class="page-link disabled" href="@Url.Action("Search","Blog", new { page=(Model.CurrentPage==Model.PageCount?Model.PageCount:Model.CurrentPage+1)})" aria-label="Next">
                                        <span aria-hidden="true"><i class="fas fa-angle-right"></i></span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="col-lg-3 col-md-12 col-sm-12">
                <form action="@Url.Action("Search","Tour")" method="post" class="searchOptions">
                    <h4>Search Options</h4>
                    <p>It’s time to plan just the perfect vacation!</p>
                    @foreach (var item in Model.TourCategories)
                    {
                        <div class="formWrap">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="exampleRadios"
                                       id="exampleRadios1" value="option1">
                                <label class="form-check-label" for="exampleRadios1">
                                    @item.Name
                                </label>
                            </div>
                        </div>
                        <input type="hidden" name="DestinationId" value="@item.Id" />
                    }
                
                    <div class="submit">
                        <button type="submit">SEARCH</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

